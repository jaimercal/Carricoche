drop database carricoche;

create database carricoche;

use carricoche;

create table contacts(
	id_contacts int primary key auto_increment,
    email varchar(45) not null,
    commentary text
);

create table users(
	id_users int primary key auto_increment,
    name varchar(45) not null,
    surname varchar(45) not null,
    username varchar(45) not null,
    email varchar(45) not null,
    password varchar(45) not null,
    address varchar(100) not null
);

create table cars(
	id_cars int primary key auto_increment,
    name varchar(45),
    brand varchar(45),
    prize float,
    kilometers float,
    color varchar(45),
    type varchar(45),
    year year,
    power int,
    sold tinyint,
    frontalPhoto varchar(45),
    lateralPhoto varchar(45),
    freePhoto varchar(45),
    id_users int,
    foreign key (id_users) references users(id_users)
);

create table bikes(
	id_bikes int primary key auto_increment,
    name varchar(45),
    brand varchar(45),
    prize float,
    kilometers float,
    color varchar(45),
    type varchar(45),
    year year,
    power int,
    cc int,
    sold tinyint,
    frontalPhoto varchar(45),
    lateralPhoto varchar(45),
    freePhoto varchar(45),
    id_users int,
    foreign key (id_users) references users(id_users)
);